<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<title>查看</title>
<h2 style="background-color:#2a2828;color:white;font-size:31.5px;line-height:40px;margin:2px -8px">查看</h2>
<div>
    <h4>Now</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            下载文件名
        </dt>

        <dd id="downloadURL">

        </dd>
        <dt>
            标题
        </dt>

        <dd id="title">

        </dd>

        <dt>
            摘要
        </dt>

        <dd id="summary">

        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("编辑", "Edit", new { id = ViewBag.ID }) |
    @Html.ActionLink("返回", "Index")
    <hr />
</p>
<script>
    $(function () {
        $.ajax({
            type: "POST",
            url: "/Home/GetNowById",
            data: "ID=" + @ViewBag.ID ,
            success: function (data) {
                if (data) {
                    FillNow(data);
                }
            }
        });
        function FillNow(data) {
            $("#downloadURL").text(data.downloadURL);
            $("#title").text(data.title);
            $("#summary").append(data.summary);
        }
    });
</script>
